// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  uid            String  @id @unique
  displayName    String  @default("") @db.VarChar(100)
  email          String  @default("") @db.VarChar(100)
  phone          String  @db.VarChar(100)
  createdAt      String  @db.VarChar(100)
  creationTime   String  @db.VarChar(100)
  lastLoginAt    String  @db.VarChar(100)
  lastSignInTime String  @db.VarChar(100)
  accessToken    String  @db.LongText
  expirationTime String  @db.VarChar(100)
  refreshToken   String  @db.LongText
  address        String  @db.LongText
  age            Int
  occupation     String
  workExperience String
  isEmployer     Boolean @default(false)

  jobs        Job[]
  resume      Resume[]
  employer    Employer[]
  videoResume VideoResume[]
}

model Job {
  id          String   @id @default(uuid())
  title       String   @db.VarChar(100)
  category    Category @default(SEMI)
  name        String   @db.VarChar(100)
  workExper   String   @db.VarChar(300)
  phoneNo     String   @db.VarChar(10)
  available   String   @db.VarChar(10)
  location    String   @db.VarChar(100)
  salary      String   @db.VarChar(100) 
  otherCond   String   @db.VarChar(300)
  createdAt   DateTime @default(now())
  employerId  String
  user        User     @relation(fields: [employerId], references: [uid])
  icon        String   @db.VarChar(100)

  @@index([employerId])
}

model Reviews {
  id       String @id @default(uuid())
  rating   Int
  userName String
  content  String @db.LongText
}

model Resume {
  uid  String @id
  user User   @relation(fields: [uid], references: [uid])

  name           String @db.VarChar(100)
  workExperience String @db.LongText
  hireReason     String @db.LongText
  hirePast       String @db.LongText
  phoneNo        String @db.VarChar(100)
  timeSlots      String @db.VarChar(100)
  aadhaarNo      String @db.VarChar(100)
  panNo          String @db.VarChar(100)

  @@index([uid])
}

model VideoResume {
  uid  String @id
  user User   @relation(fields: [uid], references: [uid])

  name           String @default("") @db.VarChar(100)
  workExperience String @default("") @db.VarChar(100)
  expectedSalary String @default("") @db.VarChar(100)
  phoneNo        String @default("") @db.VarChar(100)
  timeSlots      String @default("") @db.VarChar(100)

  @@index([uid])
}

model Employer {
  uid  String @id
  user User   @relation(fields: [uid], references: [uid])

  organizationName    String @db.VarChar(100)
  organizationAddress String @db.VarChar(100)
  industry            String @db.VarChar(100)
  organizationType    String @db.VarChar(100)
  organizationSize    String @db.VarChar(100)
  logo                String @db.VarChar(100) @default("")
  tagLine             String @db.VarChar(100) @default("")

  @@index([uid])
}

enum Category {
  SEMI
  SKILLED
}
