// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  uid            String @id
  displayName    String @unique @default("") @db.VarChar(100)
  email          String @unique @default("") @db.VarChar(100)
  phone          String @unique @db.VarChar(100)
  createdAt      String @db.VarChar(100)
  creationTime   String @db.VarChar(100)
  lastLoginAt    String @db.VarChar(100)
  lastSignInTime String @db.VarChar(100)
  accessToken    String @db.LongText
  expirationTime String @db.VarChar(100)
  refreshToken   String @db.LongText
  address        String @db.LongText
  age            Int
  occupation     String
  workExperience String

  jobs        Job[]
  resume      Resume[]
  videoResume VideoResume[]
}

model Job {
  id          String   @id @default(uuid())
  title       String   @db.VarChar(100)
  description String   @db.LongText
  category    Category @default(SEMI)
  location    String   @db.VarChar(100)
  salary      String   @db.VarChar(100)
  createdAt   DateTime @default(now())
  employerId  String
  user        User     @relation(fields: [employerId], references: [uid])
  icon        String   @db.VarChar(100)

  @@index([employerId])
}

model Reviews {
  id       String @id @default(uuid())
  rating   Int
  userName String
  content  String @db.LongText
}

model Resume {
  uid  String @id
  user User   @relation(fields: [uid], references: [uid])

  name           String @db.VarChar(100)
  workExperience String @db.LongText
  hireReason     String @db.LongText
  hirePast       String @db.LongText
  phoneNo        String @db.VarChar(100)
  timeSlots      String @db.VarChar(100)
  aadhaarNo      String @db.VarChar(100)
  panNo          String @db.VarChar(100)

  @@index([uid])
}

model VideoResume {
  uid  String @id
  user User   @relation(fields: [uid], references: [uid])

  name           String @db.VarChar(100) @default("")
  workExperience String @db.VarChar(100) @default("")
  expectedSalary String @db.VarChar(100) @default("")
  phoneNo        String @db.VarChar(100) @default("")
  timeSlots      String @db.VarChar(100) @default("")

  @@index([uid])
}

enum Category {
  SEMI
  SKILLED
}
